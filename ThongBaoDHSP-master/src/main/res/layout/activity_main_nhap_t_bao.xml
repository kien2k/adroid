<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainNhapTBao">
    <TextView
        android:id="@+id/tieude"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tieu De"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/nhaptieude"
        android:hint="Nhap tieu de"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tieude"/>
    <TextView
        android:id="@+id/noidung"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noi dung"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nhaptieude"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/nhapnoidung"
        android:hint="Nhap noi dung"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/noidung"/>
    <TextView
        android:id="@+id/dic"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thong Bao Den"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nhapnoidung"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/dic1"
        android:hint="Thong bao goi den ai"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dic"/>
    <Button
        android:id="@+id/taonhom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Huy Tao"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dic1"/>
    <Button
        android:id="@+id/huytaonhom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tao TBao"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toLeftOf="@+id/taonhom"
        app:layout_constraintTop_toBottomOf="@id/dic1"/>
    <Button
        android:id="@+id/buttonHome4.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="5dp"
        android:text="TinTuc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/buttonNhom4.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5dp"
        android:text="Nhom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonHome4.2" />
    <Button
        android:id="@+id/buttonTB4.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5dp"
        android:text="TaoTB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonNhom4.2"/>
    <Button
        android:id="@+id/buttonEdit4.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="10dp"
        android:text="CDat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonTB4.2"/>
</androidx.constraintlayout.widget.ConstraintLayout>